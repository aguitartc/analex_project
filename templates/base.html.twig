<!DOCTYPE html>
<html lang="ca">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
    <header>
        <h1>
            <a href="{{ path('home') }}"> Departaments</a>
        </h1>
        <ul>
            {% for department in departments %}
                <li>
                    <a href=" {{ path('department_id',{ 'id':department.id}) }}">{{ department.nom }}</a>
                </li>
            {% endfor %}
        </ul>
        <hr/>
    </header>
        {% block body %}{% endblock %}
    </body>
</html>
